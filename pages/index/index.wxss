page {
  /* background-color: #F8F8F8; */
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.swiper-item, swiper-item, swiper{
  display: block;
  height: 400rpx;
}
.swiper-item image{
  width: 100%;
  height: 400rpx
}
.title{
  text-align: center;
  width: 100%;
  color: #AB956C;
  padding: 20rpx 0;
  font-size: 16px
}
.theme-list{
  height: 350rpx;
  margin-bottom: 4px;
  position: relative
}
.theme-list:nth-child(odd){
  width: calc(50% - 2px);
  float: left;
  border-right: 2px solid #fff;
}
.theme-list:nth-child(even){
  width: calc(50% - 2px);
  float: right;
  border-left: 2px solid #fff;
}
.theme-list image{
  width: 100%;
  height: 100%
}
.theme-title{
  position: absolute;
  z-index: 10;
  display: block;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  bottom: 0;
  text-align: center;
  font-size: 14px;
  color: rgb(218, 150, 24);
  font-weight: bolder;
  background: rgba(0, 0, 0, .5)
}