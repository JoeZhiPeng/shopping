page{
  height: 100%;
}
.category_con{
  width: 100%;
  height: 100%;
  background: #F3F3F3;
  position: relative
}

.nav_left{
  position: absolute;
  width: 25%;
  height: 100%;
   border-right: 1px solid #dedede
}
.scroll_left{
  width: 100%;
  height: 100%;
 
}
.nav_left_items{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 14px;
  border-bottom: 1px solid #dedede
}

.nav_left .nav_left_items.active{
  /*背景色变成白色*/
  background: #fff;
}

.nav_right{
  position: absolute;
  width: 75%;
  height: 100%;
  right: 0;
}
.scroll_right{
  width: 100%;
  height: 100%;
}
.nav_right_items{
  width: calc(48% - 10px);
  height: 200rpx;
  background: #fff;
  float: left;
  margin-left: 2%;
  margin-bottom: 5px;
  border: 1px solid #dedede;
  padding: 3px
}

.nav_right_items image{
  width: 100%;
  height: 100%
}
.pro_name{
  width: 100%;
  text-align: center;
  font-size: 12px;
  margin: 5px 0;
}
.price{
  width: 50%;
  font-size: 14px;
  background: red;
  color: #fff;
  margin: 0 auto;
  text-align: center
}